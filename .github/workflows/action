# This is a basic workflow to help you get started with Actions

name: CI

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      # Установка .NET SDK
      - name: Setup .NET
        uses: actions/setup-dotnet@v1
        with:
          dotnet-version: '8.0.100' # Укажите вашу версию .NET 8.0

      # Восстановление зависимостей
      - name: Restore dependencies
        run: dotnet restore

      # Сборка проекта
      - name: Build
        run: dotnet build --configuration Release --no-restore

      # Запуск проекта
      - name: Run API
        run: dotnet run --project WebAPI/WebAPI.csproj & # Замените на путь к вашему проекту

      # Ожидание, чтобы убедиться, что сервер запущен
      - name: Wait for API to be ready
        run: sleep 10 # Увеличьте время, если требуется

      # Проверка доступности Swagger UI
      - name: Check Swagger UI
        run: |
          curl -s --head https://iningini.github.io/WebAPI/swagger | head -n 10 # Замените на ваш порт, если необходимо
